/* pages/column1/software/software.wxss */

.banner {
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 195rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.banner-title {
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.banner-sub {
  font-size: 24rpx;
  color: #fff;
}

.title {
  font-size: 32rpx;
  color: #333;
}

.sub {
  font-size: 20rpx;
  color: #999;
  padding: 20rpx 0;
}

.inner {
  padding: 40rpx 0;
  box-sizing: border-box;
  text-align: center;
}

.inner-list {
  display: flex;
  justify-content: center;
  align-items: center;
}

.inner:nth-child(even) {
  background-color: #f2f2f2;
}

.inner1 image {
  width: 650rpx;
}

.inner3 image {
  width: 650rpx;
}

.inner2 {
  padding-bottom: 20rpx;
}

.inner2-list {
  flex-flow: row wrap;
}

.inner2-list-item {
  margin: 20rpx 0;
}

.inner2-list-item image {
  width: 45rpx;
  margin-bottom: 20rpx;
}

.inner2-list-item:nth-child(1), .inner2-list-item:nth-child(3),
.inner2-list-item:nth-child(5), .inner2-list-item:nth-child(7),
.inner2-list-item:nth-child(8), .inner2-list-item:nth-child(10),
.inner2-list-item:nth-child(12), .inner2-list-item:nth-child(14) {
  width: 140rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #333;
}

.inner2-list-item:nth-child(2) image, .inner2-list-item:nth-child(4) image,
.inner2-list-item:nth-child(6) image, .inner2-list-item:nth-child(9) image,
.inner2-list-item:nth-child(11) image, .inner2-list-item:nth-child(13) image {
  width: 21rpx;
  margin: 0;
}

.inner4-list-item {
  width: 200rpx;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #333;
  margin: 0 10rpx;
  border-radius: 20rpx;
}

.inner4-list-item image {
  width: 100rpx;
  margin-bottom: 16rpx;
}
