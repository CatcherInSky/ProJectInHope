/* pages/case/case.wxss */

.scroll {
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.scroll-item {
  display: inline-block;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
  margin: 20rpx;
}

.case-inner {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  width: 700rpx;
  margin: 0 auto 40rpx;
}

.case-inner image {
  width: 300rpx;
  height: 190rpx;
  border-radius: 10rpx;
}

.case-inner-text {
  width: 370rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}

.case-title {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #353535;
}

.case-time {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.case-time image {
  width: 22rpx;
}

.case-time text {
  font-size: 22rpx;
  color: #666;
  margin-left: 10rpx;
}
