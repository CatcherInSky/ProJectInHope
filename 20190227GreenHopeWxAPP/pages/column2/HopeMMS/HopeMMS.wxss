/* pages/HopeMMS/HopeMMS.wxss */

.banner {
  width: 750rpx;
  height: 440rpx;
}

.banner-img image {
  width: 750rpx;
}

.banner-text {
  margin: 23rpx auto 0;
  text-align: center;
  font-size: 36rpx;
  color: #383838;
}

.banner-text text, .banner-text iamge {
  display: inline;
}

.banner-text image {
  width: 60rpx;
}

.mms-container {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-content: center;
}

.item {
  width: 130rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  margin: 60rpx 40rpx 0;
}

.item image {
  width: 48rpx;
  margin-bottom: 20rpx;
}

.item text {
  font-size: 28rpx;
  color: #383838;
}

.footer {
  margin-top: 60rpx;
  padding-top: 60rpx;
  box-sizing: border-box;
  background-color: #faf8f5;
  text-align: center;
}

.footer-title {
  font-size: 28rpx;
  line-height: 22rpx;
  color: #383838;
  margin-bottom: 20rpx;
}

.footer-sub {
  font-size: 20rpx;
  line-height: 22rpx;
  color: #383838;
  margin-bottom: 20rpx;
}

.booter image {
  width: 480rpx;
  padding-bottom: 20rpx;
}
